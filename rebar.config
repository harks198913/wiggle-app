{erl_opts, [debug_info,
            {parse_transform, lager_transform}, warnings_as_errors]}.
{cover_enabled, true}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{edoc_opts, [{dir, "doc"}]}.

{deps,
 [
  {meck, "0.8.2", {git, "git://github.com/basho/meck.git", {tag, "0.8.2"}}},
  {lager, "2.1.1"},
  {jsx, "1.4.5"},
  %% {mimetypes, ".*", {git, "http://github.com/spawngrid/mimetypes.git", {tag, "1.0"}}},
  {cowboy, "1.0.2"},
  {cowboy_oauth, ".*", {git, "https://github.com/project-fifo/cowoby_oauth.git", {branch, "master"}}},
  {msgpack, ".*", {git, "https://github.com/project-fifo/msgpack-erlang.git", {tag, "0.2.3-dialyzer"}}},
  {e2qc, ".*", {git, "git://github.com/arekinath/e2qc.git", "HEAD"}},
  {jsxd, "0.1.10"},
  {uuid, ".*", {git, "https://github.com/project-fifo/erlang-uuid.git", {branch, "master"}}},
  {fifo_dt, ".*", {git, "https://github.com/project-fifo/fifo_dt.git", {branch, "master"}}},
  {fifo_spec, ".*", {git, "https://github.com/project-fifo/fifo_spec.git", {branch, "test"}}},
  {fifo_s3, ".*", {git, "https://github.com/project-fifo/fifo_s3.git", {branch, "master"}}},
  {libchunter, ".*", {git, "http://github.com/project-fifo/libchunter.git", {branch, "test"}}},
  {libsniffle, ".*", {git, "http://github.com/project-fifo/libsniffle.git", {branch, "test"}}},
  {libsnarl, ".*", {git, "http://github.com/project-fifo/libsnarl.git", {branch, "test"}}},
  {lager_watchdog, "0.1.9"},
  {jesse, ".*", {git, "https://github.com/klarna/jesse.git", {tag, "1.1.5"}}},
  {folsom_ddb, "0.1.14"},
  {dqe, ".*", {git, "https://github.com/dalmatinerdb/dqe.git", {tag, "0.1.12"}}}
 ]}.

{pre_hooks, [{compile, "make version_header"}]}.

{overrides,
 [{override, pooler,
   [{erl_opts,
     [{platform_define, "^[0-9]+", namespaced_types},
      debug_info,
      inline]}]}]}.
