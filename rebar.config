 [
  {meck, "0.8.2", {git, "git://github.com/basho/meck.git", {tag, "0.8.2"}}},
  {lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "2.0.3"}}},
  {fifo_dt, "0.1.*", {git, "https://github.com/project-fifo/fifo_dt.git", {tag, "0.1.46"}}},
  {cuttlefish, ".*", {git, "https://github.com/basho/cuttlefish.git", {tag, "2.0.1"}}},
  {jsx, ".*", {git, "http://github.com/talentdeficit/jsx.git", {tag, "v1.4.4"}}},
  {mimetypes, ".*", {git, "http://github.com/spawngrid/mimetypes.git", {tag, "1.0"}}},
  {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "1.0.1"}}},
  {cowboy_oauth, ".*", {git, "https://github.com/project-fifo/cowoby_oauth.git", {tag, "0.2.2"}}},
  {eplugin, ".*", {git, "http://github.com/Licenser/eplugin.git", {tag, "0.1.2"}}},
  {msgpack, ".*", {git, "https://github.com/msgpack/msgpack-erlang.git", {tag, "0.3.3"}}},
  {jsxd, ".*", {git, "https://github.com/Licenser/jsxd.git", {tag, "0.1.9"}}},
  {e2qc, ".*", {git, "git://github.com/arekinath/e2qc.git", {ref, "075021c13013a38b59115ac89d9c4affe6218229"}}},
  {ensq, ".*", {git, "git://github.com/project-fifo/ensq.git", {tag, "0.1.5"}}},
