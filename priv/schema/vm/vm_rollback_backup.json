{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "description": "Rolls back a backup.",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": ["rollback"],
      "required": true
    },
    "hypervisor": {
      "type": "string",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    }
  }
}
